programa
{
	funcao inicio()
	{
		
		inteiro numero,limite,resultado,contador

		contador = 0
		

		escreva("Digite um número")
		leia(numero)

		escreva("por qual número quer multiplicar?")
		leia(limite)
		
		faca{

			resultado = numero * contador
			escreva(numero + " x " + contador + " = " + resultado + "\n")
			contador ++
			
		} enquanto(contador<=limite)
	
}
	}

